{
  "printWidth": 100,
  "endOfLine": "auto",
  "singleQuote": true,
  "quoteProps": "consistent",
  "trailingComma": "all",
  "arrowParens": "always",
  "tabWidth": 4,
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    { "files": "*.json", "options": { "tabWidth": 2 } }
  ]
}
